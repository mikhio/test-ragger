# Настройки чанкинга (опционально)
CHUNK_SIZE=1200
CHUNK_OVERLAP=250

# Модель эмбеддингов (опционально)
DEFAULT_MODEL=text-embedding-3-small

# Рабочие параметры
MODE=ingest
HTML_DIR=./html
TOP_K=5
QUERY=
LANG=

